<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".thumbextraction">
<androidx.cardview.widget.CardView
    android:layout_width="320dp"
    android:layout_height="400dp"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="25dp">
    <ImageView
        android:id="@+id/img_thumb"
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:srcCompat="@drawable/bio"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="75dp"
        android:padding="5dp"
        android:background="@drawable/imgborder"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Not captured"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="160dp"
        android:textSize="25sp"
        android:textStyle="bold"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="yet"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="200dp"
        android:textSize="25sp"
        android:textStyle="bold"></TextView>

    <View
        android:layout_width="190dp"
        android:layout_height="2dp"
        android:background="@color/DodgerBlue"
        android:layout_below="@id/img_newstudent"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="65dp"/>


    <Button
        android:layout_below="@+id/img_thumb"
        android:id="@+id/btn_verify"

        android:layout_marginTop="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="capture"
        android:textSize="22sp"
        android:textColor="#F0F8FF"
        android:background="@drawable/button_rounded" />
</androidx.cardview.widget.CardView>
</LinearLayout>
